Bootstrap: docker
From: pytorch/pytorch:1.13.1-cuda11.6-cudnn8-runtime

%files
    ./archs.py /
    ./detector.py /
    ./entrypoint.py /
    ./gather_data.py /
    ./utils /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /
    ./scale_params.npy /

%post
    apt update

    pip install --upgrade pip
    pip install tqdm jsonschema jsonargparse scikit-learn
    pip install lightgbm

%runscript
    exec python3 /entrypoint.py "$@"
